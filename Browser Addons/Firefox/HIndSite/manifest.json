{
  "manifest_version": 2,
  "name": "Hind•Site",
  "version": "1.52",

  "description": "Sitecore Tools",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [
        "AutoBuild/final/hindsite.js",
        "AutoBuild/final/browser-polyfill.js",
        "AutoBuild/final/content.min.js"
      ]

    }
  ],
  "permissions": [
    "activeTab",
    "idle",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Hind•Site",
    "default_popup": "/AutoBuild/final/PopUp.min.html"
  },
    "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }
}