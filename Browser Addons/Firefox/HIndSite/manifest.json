{
  "manifest_version": 2,
  "name": "Hind•Site",
  "version": "1.0",

  "description": "Sitecore Tools",

  "icons": {
    "48": "icons/border-48.png"
  },
  "options_ui": {
    "page": "options.html"
  },


  "content_scripts": [
    {
      "matches": [ "http://*/*" ],
      "js": [ "hindsite.js" ]

    }
  ],
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Setting",
    "default_popup": "popup/choose_setting.html"
  }
}