{
  "manifest_version": 2,
  "name": "Hind•Site",
  "version": "1.0",

  "description": "Sitecore Tools",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": [ "http://*/*" ],
      "js": [ "content_scripts/hindsite.js" ]

    }
  ],
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Setting",
    "default_popup": "AutoBuild/PopUp.min.html"
  }
}